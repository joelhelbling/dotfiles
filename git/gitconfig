# DO NOT EDIT BELOW THIS LINE
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = ~/.gitignore
  autocrlf = false
  safecrlf = false
  editor = vim
[alias]
  c = commit -m
  co = checkout
  ci = commit
  st = status
  br = branch
  a = add
  di = diff
  dic = diff --cached
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  gist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --oneline --date=short
  bh = log --oneline --graph --decorate --all
  type = cat-file -t
  dump = cat-file -p
  pl = pull
  ps = push
  plre = pull --rebase
  st = status
  out = log origin..HEAD
  l = log --graph --relative-date --pretty=format:'%C(yellow)%h%Creset%C(blue)%d%Creset %s %C(yellow)(%ad by %an)%Creset'
  ll = log --all --graph --relative-date --pretty=format:'%C(yellow)%h%Creset%C(blue)%d%Creset %s %C(yellow)(%ad by %an)%Creset'
[user]
  name = Joel Helbling
  email = joel@joelhelbling.com
[pull]
	rebase = preserve
  # --no-rebase if you don't want to auto-rebase
[push]
  default = current
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[github]
	user = joelhelbling
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[merge]
	tool = p4mergetool
[mergetool "p4mergetool"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $PWD/$BASE $PWD/$REMOTE $PWD/$LOCAL $PWD/$MERGED
	trustExitCode = false
[mergetool]
	keepBackup = false
[diff]
	tool = p4mergetool
[difftool "p4mergetool"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $LOCAL $REMOTE
[gpg]
	program = /usr/local/bin/krgpg
[commit]
	gpgSign = true
[tag]
	forceSignAnnotated = true
